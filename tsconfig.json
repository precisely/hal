{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "lib": [ "es2017" ],
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "index.ts", "types/global.d.ts"],
  "exclude": ["node_modules/", "tests"]
}
